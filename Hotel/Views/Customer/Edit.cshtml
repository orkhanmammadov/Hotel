@model Hotel.Models.Customer
@{
    ViewBag.Title = "Edit";
}

<div class="page">
    <div id="customer">

        <div class="header">
            <div class="row">
                <div class="col-6">
                    <h1><i class="fas fa-user-tie"></i>Müştəri Yenilə</h1>
                </div>
            </div>
        </div>



        <div class="create">
            <form method="post">

               
                <div class="form-group">
                    @Html.LabelFor(m => m.Fullname)
                    @Html.TextBoxFor(m => m.Fullname, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Fullname, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.isAdult)
                    @Html.DropDownListFor(model => model.isAdult, new List<SelectListItem>()
{
new SelectListItem() { Text = "Böyük", Value = "True" },
new SelectListItem() { Text = "Uşaq", Value = "False"}
}, "Müştəri Tipi", new { @id = "iAdult", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.isAdult)
                </div>
                <div class="form-row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success">Yenilə</button>

                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

