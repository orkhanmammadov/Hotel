@model List<Hotel.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<div class="page">
    <div id="customer">

        <div class="header">
            <div class="row">
                <div class="col-9">
                    <h1><i class="fas fa-user-tie"></i> Müştərilər</h1>
                </div>
                <div class="col-3 text-right">
                    <a href="@Url.Action("create","customer")" class="btn btn-success">Müştəri Yarat</a>
                </div>

            </div>
        </div>

        <div class="customer-list">
            <table class="table table-hover">
                <thead>
                    <tr style="background-color:black">
                        <th></th>
                      
                        <th>Ad və Soyad</th>
                        <th>Müştəri Tipi</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="width:20%">
                                <div class="icon">
                                    <img src="~/Public/assets/images/image-gallery/429588-200.png" alt="">
                                </div>
                            </td>
                            <td style="width:20%">
                                <h6>@item.Fullname</h6>
                            </td>
                           
                            <td style="width:20%">
                                <h6>
@if (item.isAdult==true)
{
    <span>Böyük</span>
}
else
{
                                <span>Uşaq</span>
}
                                </h6>
                            </td>
                            <td style="width:20%">
                                <a href="@Url.Action("edit", new { id=item.Id})" style="width:90px;" class="btn btn-primary mb-1">Yenilə</a>
                                <a onclick="return confirm(' @item.Fullname Adlı Müştərini Silmək İstəyirsiniz?')" href="@Url.Action("delete", new { id=item.Id})" class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>



    </div>
</div>

