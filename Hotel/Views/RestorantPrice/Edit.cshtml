@model Hotel.Models.RestorantPrice
@{
    ViewBag.Title = "Edit";
}

<div class="page">
    <div id="customer">

        <div class="header">
            <div class="row">
                <div class="col-9">
                    <h1><i class="fas fa-list"></i>Sifarişi Yenilə</h1>
                </div>


            </div>
        </div>



        <div class="create">
            <form method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    @Html.LabelFor(m => m.RoomId)
                    @Html.DropDownListFor(m => m.RoomId, new SelectList(ViewBag.Room, "Id", "number"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RoomId, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.MenuId)
                    @Html.DropDownListFor(m => m.MenuId, new SelectList(ViewBag.Menu, "Id", "name"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.MenuId, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Count)
                    @Html.TextBoxFor(m => m.Count, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Count, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Status)
                    @Html.DropDownListFor(model => model.Status, new List<SelectListItem>()
{
new SelectListItem() { Text = "Aktiv", Value = "True" },
new SelectListItem() { Text = "Deaktiv", Value = "False"}
}, "Statusu Seçin", new { @id = "iAdult", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Status)
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success">Yenilə</button>

                        </div>
                    </div>
            </form>
        </div>

    </div>
</div>

