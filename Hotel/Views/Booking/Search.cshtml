@model List<Hotel.Models.Room>


<div class="page">
    <div id="customer">

        <div class="header">
            <div class="row">
                <div class="col-6">
                    <h1><i class="fas fa-user-tag"></i>Axtar</h1>
                </div>

            </div>
        </div>


        <div class="create">
            <form method="post">
                <div class="form-row">
                    <div class="form-group col-md-11 mb-0">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="checkindate">Giriş Tarixi</label>
                                <input type="date" class="form-control" id="checkindate" name="checkindate">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="checkoutdate">Çıxış Tarixi</label>
                                <input type="date" class="form-control" id="checkoutdate" name="checkoutdate">
                            </div>
                            <div class="form-group col-md-2">
                                <label for="adult">Böyük sayı</label>
                                <input type="number" class="form-control" id="adult" name="adult">
                            </div>
                            <div class="form-group col-md-2">
                                <label for="child">Uşaq sayı</label>
                                <input type="number" class="form-control" id="child" name="child">
                            </div>
                        </div>

                    </div>
                    <div class="form-group col-md-1 mt-auto">
                        <div class="form-row">
                            <button type="submit" class="btn btn-primary search-room">Axtar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

